!!!
%html
  %head
    %meta{:charset => "utf-8"}
      %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
      %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
      %title= content_for?(:title) ? yield(:title) : "Sensu Admin"
      %meta{:content => "Sensu-admin is an admin application for viewing, silencing and resolving events from the sensu-api. In addition to exposing many other api related things.", :name => "description"}
      %meta{:content => "Sonian DevOps Josh Pasqualetto <josh.pasqualetto@sonian.net>", :name => "author"}
      %meta{:name => 'viewport', :content => "width=device-width, initial-scale=1"}
      = stylesheet_link_tag    "sensu-mobile.min"
      = stylesheet_link_tag    "jquery.mobile.min"
      = javascript_include_tag "jquery"
      = javascript_include_tag "jquery_ujs"
      = javascript_include_tag "jquery.mobile"
      = csrf_meta_tags
      = favicon_link_tag
      = yield(:head)
    %body
      %div{'data-role' => 'page'}
        = yield

        %center
          %div
            - if mobile_device?
              %a{:href => "/events?mobile=0", "data-ajax" => "false"} Full Site
            - else
              %a{:href => "/events?mobile=1", "data-ajax" => "false"} Mobile Site
